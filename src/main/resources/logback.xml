<configuration debug="true">
    <!-- Logback config for tests and local execution on developer machine -->
    <!-- Further information: http://logback.qos.ch/manual/configuration.html -->
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd_HH:mm:ss.SSS} -  %d [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="console" />
    </root>
</configuration>
